{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Current JS File (no tests)",
      "args": ["${file}"],
      "runtimeExecutable": "node",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Current JS File (with tests)",
      "args": ["run", "test", "--", "${file}"],
      "runtimeExecutable": "npm",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
